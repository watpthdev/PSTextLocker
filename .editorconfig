# EditorConfig for PowerShell project
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# PowerShell files
[*.ps1]
indent_style = space
indent_size = 4

# Text and markdown files
[*.{txt,md}]
indent_style = space
indent_size = 4

# Git config files
[{.gitignore,.gitattributes}]
indent_style = space
indent_size = 4
